<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_regi"
    android:background="@drawable/gradient">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        >


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="140dp">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="Admin ID"
        android:textColor="#000"
        android:layout_marginTop="90dp"
        />
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/strokeforregitration"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:hint="  Admin Id"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="Password"
            android:textColor="#000"

            />
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/strokeforregitration"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:hint="  Password"
            android:drawableLeft="@drawable/ic_security_black_24dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember Me"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text=" Login "
            android:background="@color/orange"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/adminpanel"/>
    <View
        android:layout_width="133dp"
        android:layout_height="130dp"
        android:background="@drawable/circle"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="137dp"

        >
    </View>

</RelativeLayout>